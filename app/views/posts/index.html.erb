<% provide(:title, 'Blog') %>
<div class=" row">
	<header>
		
		<div class="nine columns">
			<h1>Blog <small>El mejor espacio para expresar tus dudas!.</small></h1>
			<hr />
		</div>
		
		<div class="three columns">
			<h4><%= link_to 'Nueva Entrada', new_post_path,:class=>"button large"%></h4>
		</div>
	</header>
</div>
<!-- Main Page Content and Sidebar -->
<div class="row">
	<!-- Main Blog Content -->
	<div class="nine columns" role="content">
		<% @posts.each do |post| %>
		<article class="panel">
			<h3 class="post-title color-azul">  <%=post.titulo%></h3>
			<h6>Escrito por: <a href="#"><%= post.usuario%></a> Publicado <%= time_ago_in_words  post.created_at%> atr√°s</h6>
			<p>
				<%= truncate post.texto%>
			</p>
			<%= link_to "Seguir leyendo",post ,:class=>"button  success small"%>
		</article>
		<hr />
		<% end %>
	</div>
	<%= render 'layouts/aside-blog'%>
</div>

<br />
